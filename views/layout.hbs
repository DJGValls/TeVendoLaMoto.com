                </li>
                {{/if}}

                <li class="nav-item">
                <a class="nav-link text-white" href="/auth/logout">Cerrar sesion</a>
                </li>


                {{else}}
                <li class="nav-item">
                  <a class="nav-link active text-white" aria-current="page" href="/auth/login">Login</a>
                </li>

                <li class="nav-item">
                <a class="nav-link active text-white" aria-current="page" href="/auth/signup">Registro</a>
                </li>
              {{/if}}
          </ul>
          <form class="d-flex" role="search">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Buscar"
              aria-label="Buscar"
            />
            <button
              class="btn btn-outline-success"
              type="submit"
            >Buscar</button>
          </form>
        </div>
      </div>
    </nav>

